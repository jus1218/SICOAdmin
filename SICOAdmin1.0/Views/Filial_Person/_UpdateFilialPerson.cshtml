@{
    Layout = null;
    List<SelectListItem> lstFilials = (List<SelectListItem>)ViewBag.Filials;
}

<div class="modal fade" id="updateFPModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar condómino - <label id="lbName"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form onsubmit="return jsConfirm(this)" action="@Url.Action("UpdateFilialPerson", "Filial_Person")" method="post" id="frm">
                    <div class="col-12 d-xl-flex d-md-flex justify-content-md-between justify-content-xl-center">

                        <div class="col-xl-3 col-md-6 col-sm-12 me-5">
                            @*INPUTS TIPO HIDDEN PORQUE NO ES NECESARIO MOSTRARLOS AL USUARIO*@
                            <input id="txtId" required name="Identification" type="hidden" class="form-control" placeholder="(Números y letras)" readonly />
                            <input id="txtName" required name="Name" type="hidden" class="form-control" placeholder="(Números y letras)" disabled />

                            <label class="mt-4 h6">Número de filial</label>
                            <select required name="IdFilial" id="slIdFilial" class="form-control">
                                <option value="" selected disabled hidden>Seleccionar</option>
                                @foreach (var e in lstFilials)
                                {
                                    <option value="@e.Value"> @e.Text</option>
                                }
                            </select>

                            <label class="mt-4 h6">Correo electrónico</label>
                            <input id="txtEmail" required type="text" name="Email" class="form-control" placeholder="ejemplo@ejemplo.com" />

                            <label class="mt-4 h6">Trato</label>
                            <select required name="Treatment" id="slTreatment" class="form-control h6">
                                <option value="Sr">Sr</option>
                                <option value="Sra">Sra</option>
                                <option value="Srta">Srta</option>
                            </select>

                        </div><br />

                        <div class="col-xl-3 col-md-6 col-sm-12 me-5">
                            <label class="mt-4 h6">Teléfono 1</label>
                            <input id="txtTelephone1" required type="text" name="Telephone1" class="form-control" placeholder="(Solo números)" />

                            <label class="mt-4 h6">Teléfono 2</label>
                            <input id="txtTelephone2" required type="number" name="Telephone2" class="form-control" placeholder="(Solo números)" />

                            <label class="mt-4 h6">WhatsApp</label>
                            <input id="txtWhatsApp" required type="number" name="WhatsApp" class="form-control" placeholder="(Solo números)" />
                        </div><br />

                        <div class="col-xl-3 col-md-6 col-sm-12 me-5">
                            <label class="mt-4 h6">Tipo</label>
                            <select required name="Type" id="slType" class="form-control h6">
                                <option value="P">Propietario</option>
                                <option value="I">Inquilino</option>
                                <option value=" ">Sin definir</option>
                            </select>

                            <label class="mt-4 h6">Responsable</label>
                            <input id="cbResponsable" type="checkbox" name="Responsable" class="form-control" onclick="handleClick(this)"/>
                        </div><br />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
