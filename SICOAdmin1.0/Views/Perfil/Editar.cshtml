
@model SICOAdmin1._0.Models.Perfil.PerfilViewModel

@{
    List<SelectListItem> lstUser = (List<SelectListItem>)ViewBag.lstUser;
    ViewBag.Title = "Editar Perfil";

    List<int?> lstActions = (List<int?>)Session["lstActions"];
    if (lstActions == null)
    {
        lstActions = new List<int?>();
    }
}

@section Styles{

    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
}

<div class="container margin-container p-4 glass">
    <!--IMPUTS-->
    <h3 class="mb-4">Editar Perfil</h3>

    <div class="row-12">

        @using (Html.BeginForm("Editar", "Perfil", FormMethod.Post, new { role = "form", @class = "row-12" }))
        {
            @Html.HiddenFor(d => d.IdPerfil)//Se va en la peticion
            @Html.HiddenFor(d => d.Nombre)//S e va el nombre en la peticion

            <div class="col-12 d-xl-flex d-md-flex justify-content-between">
                <!--Nombre perfil-->
                <div class="col-xl-3 col-md-3 col-sm-12 me-4">
                    @Html.LabelFor(d => d.IdPerfil)
                    @Html.TextBoxFor(d => d.IdPerfil, new { @class = "form-control", id = "idPerfil", @disabled = true })
                    @Html.ValidationMessage("IdPerfil", null, new { @class = "text-danger" })
                </div>
                <!--Nombre perfil-->
                <div class="col-xl-3 col-md-3 col-sm-12 me-4">
                    @Html.LabelFor(d => d.Nombre)
                    @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control", required = "required", id = "Nombres", HtmlAttributes = new { Type = "text" } })
                    @Html.ValidationMessage("Nombre", null, new { @class = "text-danger" })
                </div>

                <!--Decripcion perfil-->
                <div class="col-xl-3 col-md-3 col-sm-12 me-4">

                    @Html.LabelFor(d => d.Descripcion)
                    @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control", id = "Descripccion" })
                    @Html.ValidationMessage("Descripcion", null, new { @class = "text-danger" })
                </div>
                <!--Decripcion perfil-->
                <div class="col-xl-3 col-md-3 col-sm-12 me-4">
                    @Html.LabelFor(d => d.Activo)<br />
                    @Html.CheckBoxFor(d => d.Activo, new { @class = "form-control ", id = "Activo" })
                    @Html.ValidationMessage("Activo", null, new { @class = "text-danger" })
                </div>

            </div>
            <!--BOTONES-->
            <div class="col mt-4 d-flex justify-content-center mb-2">
                @*<input class="btn btn-primary me-2" type="submit" value="Guardar" />*@

                <button id="btnAgregar" class="btn btn-primary mr-2 ">
                    <i class="fa fa-floppy-o mr-1" aria-hidden="true"></i>
                    Guardar
                </button>

                <a class="btn btn-danger" href="@Url.Action("Index","Perfil")">Cerrar</a>
            </div>

        }



        <!--PARTE USUARIOS DEL PERFIL-->


    </div>
    <div class="x_content row-12">

        <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#usuarios" role="tab" aria-controls="Usuarios" aria-selected="true">Usuarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Acciones</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">

            <!--VISTA 1-->
            <div class="tab-pane fade show active" id="usuarios" role="tabpanel" aria-labelledby="home-tab">
                @if (@lstActions.Contains(34))
                {

                    <div class="row">
                        <!--AGREGAR-->
                        <div class="col-md-3 col-sm-12 mt-2" style="z-index:1">
                            <div class="form-group" id="selectUsers">
                                @Html.Partial("_SelectOpcUser", lstUser)
                            </div>

                            <div class="row mt-4 d-flex justify-content-center">
                                <div class="col-xl-6 col-md-6   col-sm-4 mb-3 mt-2">
                                    @*<input type="button"
                            id="btnAgregarPerfil"
                            value="Agregar"
                            class="btn btn-success col-12" />*@

                                    <button id="btnAgregarPerfil" type="button" class="btn btn-primary col-12">
                                        <i class="fa fa-plus mr-1" aria-hidden="true"></i>
                                        Agregar
                                    </button>


                                </div>


                            </div>

                        </div>


                        <div class="col ">
                            <div class="row m-1 ">

                                <div class="d-flex w-100 justify-content-between">

                                    <h2 class="col ps-4">Usuarios del perfil</h2>
                                    <!--Barra busqueda-->
                                    <div class="col input-group ">
                                        <input type="text"
                                               class="form-control"
                                               placeholder="Buscar..."
                                               aria-label="Buscar..."
                                               aria-describedby="button-search"
                                               id="buscar" value="@ViewBag.palabraBuscar" />

                                    </div>
                                </div>




                            </div>
                            <div class="row pl-3">
                                <select class="col-md-1 col-sm-2 form-control select-item border-light" aria-label="Default select example" id="tamanoPagina">
                                    @if (@ViewBag.CantRegistros == null)
                                    {
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>

                                    }
                                    else if (@ViewBag.CantRegistros == 2)
                                    {
                                        <option value="2" selected>2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>

                                    }
                                    else if (@ViewBag.CantRegistros == 3)
                                    {
                                        <option value="2">2</option>
                                        <option value="3" selected>3</option>
                                        <option value="4">4</option>
                                    }
                                    else if (@ViewBag.CantRegistros == 5)
                                    {
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4" selected>4</option>
                                    }
                                </select>
                            </div>


                            <!--TABLE USUARIOS DEL PERFIL-->
                            <div class="row p-3" id="tableUser">
                                @Html.Partial("_UsuariosPerfil", (List<SICOAdmin1._0.Models.SP_P_UsuariosDelPerfil_Result>)ViewBag.lstUsuariosPerfil)
                            </div>
                        </div>


                    </div>

                }
            </div>
            <!--VISTA 2-->
            @if (@lstActions.Contains(32))
            {


                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <h3>Lista de acciones</h3>
                    </div>
                    <!--Va el arbol-->
                    @Html.Partial("_ArbolView")
                    <div class="col d-flex justify-content-center mt-3">

                        <input type="submit"
                               value="Guardar cambios"
                               class="btn btn-success col-xl-2 col-md-3 col-12"
                               data-toggle="modal" 
                               data-target="#modalSave"
                               id="btnSave" />
                    </div>

                </div>
            }
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="modalEliminar" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Eliminar</h5>

            </div>
            <div class="modal-body">
                Estas seguro que deseas eliminar el usuario del perfil? <br />
                <label>Numero de usuario: </label>
                <label id="idUsuario"></label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                <button id="btnEliminar" type="button" data-dismiss="modal" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</div>
<!-- END Modal -->




<div class="modal fade" id="modalSave" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Guardar cambios</h5>
                

            </div>
            <div class="modal-body">
                <form id="fomrGuardarAccionesPerfil">
                    <p>Ingrese la contraseña del administrador para guardar los cambios</p>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña</label>
                        <input type="password" class="form-control" id="contrasenaAdmin" placeholder="Contraseña">
                    </div>

                    <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Aceptar</button>
                </form>


            </div>
            <div class="modal-footer">
                
            </div>
        </div>
    </div>
</div>

@section scripts{



    <script>
        //Trae la vista parcial y la dibuja en el div tableUser
        const idPerfil = document.getElementById("idPerfil").value;
        console.log("Hola Mundo");
        //const userLog = document.getElementById("usuarioLog").textContent;
        var url = "@Url.Content("~/Perfil/agregarUsuarioPerfil")";
        var urlDeleteUserProfile = "@Url.Content("~/Perfil/eliminarUsuarioPerfil")";
        let btnAgregarPerfil = document.getElementById("btnAgregarPerfil");
        const $renderBody = document.getElementById("renderBody");
        const d = document;


        $renderBody.addEventListener("click", (e) => {
            let page = e.target.dataset.value || "";

           if (e.target.name === "nextPage") {
               siguientePagina({
                    idRelacion: idPerfil,
                    sig: page,
                    totalPage: document.getElementById("totalPag").textContent,
                    CantRegistros: document.getElementById("tamanoPagina").value,
                    url: "@Url.Content("~/Perfil/_UsuariosPerfil")",//'../_UsuariosPerfil'
                    container: "tableUser",
                    palabraBuscar: document.getElementById("buscar").value.toLowerCase()
                })
                return false;
            }
            else if (e.target.name === "previousPage") {
               retrocederPagina({
                    idRelacion: idPerfil,
                    ant: page,
                    totalPage: document.getElementById("totalPag").textContent,
                    tamanoPagina: document.getElementById("tamanoPagina").value,
                    url: "@Url.Content("~/Perfil/_UsuariosPerfil")",
                    container: "tableUser",
                    palabraBuscar: document.getElementById("buscar").value.toLowerCase()
               })
            }
        });

                // CHANGE
        $renderBody.addEventListener("change", (e) => {
            if (e.target.id === "tamanoPagina") {

                cambioTamanoPagina({
                    idRelacion: idPerfil,
                    totalPage: d.getElementById("totalPag").textContent,
                    tamanoPagina: e.target.value,
                    url: "@Url.Content("~/Perfil/_UsuariosPerfil")",
                    container: "tableUser",
                    palabraBuscar: d.getElementById("buscar").value.toLowerCase(),
                    NumPagina: (d.getElementById("pagActual").textContent - 1)
                });
                return false;
            }
        });




                //KEY_UP
        $renderBody.addEventListener("keyup", (e) => {
            if (e.target.id === "buscar" ) {
                let palabraBuscar = e.target.value;
                //console.log(palabraBuscar.toLowerCase());
                buscarPalabra({
                    idRelacion: idPerfil,
                    url: "@Url.Content("~/Perfil/_UsuariosPerfil")",
                    container: "tableUser",
                    palabraBuscar: d.getElementById("buscar").value.toLowerCase(),
                    tamanoPagina: d.getElementById("tamanoPagina").value
                });
                return false;
            }
        })
        //btnAgregarPerfil.addEventListener("click", (e) => {

        //    console.log("papasito");
        //})

        $(document).ready(function () {
            //BUSCAR USUARIOS DEL PERFIL RELACIONADO
            //$("#userss").dataTable();

            $("#btnAgregarPerfil").click(() => {
                console.log("Entro");
                fetch(url, {
                    method: "POST",
                    body: JSON.stringify({
                        Usuario: document.getElementById("userSelect").value,
                        IdPerfil: idPerfil
                        //UsuarioCreacion: userLog,
                        //FechaCreacion:""
                    }),
                    headers: {
                        "Accept": "application/json",
                        "Content-Type": "application/json"
                    }
                })
                    .then(res => res.ok ? res.json() : null)
                    .then(res => {
                        if (res == 1) {
                            cargarComponenteLocal();
                            swal('Bien!',
                                'Se ha agregado!',
                                'success')
                        } else {
                            swal('Opps!',
                                'No se asocio el usuario al perfil!',
                                'error'
                            )
                        }
                    })

            })
        });

        function cargarComponenteLocal() {
            //recarga tabla usuarios
            //$("#tableUser").load("../_UsuariosPerfil?id=" + idPerfil, function (res) {
            //    $("#tableUser").html(res);
            //    //BUSCAR USUARIOS DEL PERFIL RELACIONADO
            //    $("#userss").dataTable();
            //})

            cargarComponent({
                container: 'tableUser',
                url: '../_UsuariosPerfil',
                body: {
                    Usuario: idPerfil,
                    palabraBuscar: document.getElementById("buscar").value.toLowerCase(),
                    NumPagina: Number(document.getElementById("pagActual").textContent) - 1,
                    CantRegistros: document.getElementById("tamanoPagina").value,
                    totalPaginas: document.getElementById("totalPag").textContent
                }
            });



            //recarga dropDownList
            $("#selectUsers").load("../_SelectOpcUser?id=" + idPerfil, function (res) {
                $("#selectUsers").html(res);
            })
        }


        //ELIMINAR USUARIOS DE PERFIL
        let idUser = document.getElementById("idUsuario");
        function asignar(usuario) {
            //console.log("Asignando");
            //console.log(l);
            idUser.textContent = usuario;
            idUser.value = usuario;
           $("#modalEliminar").modal("show");
        }
        const btnEliminar = document.getElementById("btnEliminar");
        btnEliminar.addEventListener("click", function () {
            fetch(urlDeleteUserProfile, {
                method: "POST",
                body: JSON.stringify({
                    Usuario: idUser.value,
                    IdPerfil: idPerfil
                    //UsuarioCreacion: userLog,
                    //FechaCreacion: ""
                }),
                headers: {
                    "Accept": "application/json",
                    "Content-Type": "application/json"
                }
            })
                .then(res => res.ok ? res.json() : null)
                .then(res => {
                    if (res == 1) {
                        cargarComponenteLocal();
                        swal('Bien!',
                            'Se ha eliminado!',
                            'success')
                    } else {
                        swal('Opps!',
                            'No se elimino la relacion usuario al perfil!',
                            'error'
                        )
                    }
                }
                )

        })




    </script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    @* FUNCION TREE VIEW *@
<script>

        const formValidarPermiso = document.getElementById('fomrGuardarAccionesPerfil');

        const idPerfil2 = document.getElementById("idPerfil").value;
        $(document).ready(function () {
            var tree = $('#tree').tree({
                primaryKey: 'idAccion',
                uiLibrary: 'bootstrap4',
                dataSource: '/Perfil/Get' + '?id=' + idPerfil2,
                checkboxes: true
            });

            formValidarPermiso.addEventListener('submit', (e) => {
                e.preventDefault();

                verificarContrasenaAdmin(e);
                formValidarPermiso.reset();
            });

            //$('#guardarAccionesPerfil').on('click', verificarContrasenaAdmin());
            function verificarContrasenaAdmin(e) {

                const contrasena = document.getElementById('contrasenaAdmin').value;

                fetchMethod({
                    url: "@Url.Content("~/Perfil/verificarContrasenaAdmin")",
                    body: {
                        contrasena: contrasena
                    }
                    , cbSuccess: (res) => {
                        if (res.tienePermiso === 1) {

                            guardarAcciones();
                            $("#modalSave").modal("hide");

                        }
                        else {

                            swal('Opps!',
                                res.mensaje,
                                'error')
                        }

                    }
                });


        }

        function guardarAcciones() {

            var checkedIds = tree.getCheckedNodes();
            $.ajax({ url: '/Perfil/SaveCheckedNodes', data: { checkedIds: checkedIds, idPerfil: idPerfil2 }, method: 'POST' })
                .then(res => {
                    if (res == 1) {
                        cargarComponenteLocal();
                        swal('Bien!',
                            'Se ha guardado los cambios correctamente!',
                            'success')
                    } else {
                        swal('Opps!',
                            'No se guardo correctamente las relaciones acciones a perfil!',
                            'error'
                        )
                    }
                })
                .fail(function () {
                    alert('Failed to save.');
                });
        }

        });


</script>

}
