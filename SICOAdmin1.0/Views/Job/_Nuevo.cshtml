@model SICOAdmin1._0.Models.PUESTO
@{
}

<div class="modal fade" 
     id="Modal" 
     data-backdrop="false"
     role="dialog" 
     aria-labelledby="ModalTitle" 
     aria-hidden="true">
    <div class="modal-dialog" 
         style="max-width: 1350px!important;" 
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" 
                    class="modal-title" 
                    id="ModalTitle"> Agregar Puesto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                @using (Html.BeginForm("Nuevo", "Job", FormMethod.Post, new { role = "form", @class = "row-12" }))
                {
                    @Html.HiddenFor(d => d.UsuarioModificacion);
                    @Html.ValidationMessage("Error", new { @class = "text-danger" })
                    <div class="row ">
                        <div class="col">
                            @Html.LabelFor(d => d.Descripcion, new { @class = "mt-4" })
                            @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("Descripcion", null, new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(d => d.CodigoCCSS, new { @class = "mt-4" })
                            @Html.TextBoxFor(d => d.CodigoCCSS, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("Codigo CCSS", null, new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(d => d.CodigoINS, new { @class = "mt-4" })
                            @Html.TextBoxFor(d => d.CodigoINS, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("CodigoINS", null, new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row ">
                        <div class="col">
                            @Html.LabelFor(d => d.SalarioMinimo, new { @class = "mt-4" })
                            @Html.TextBoxFor(d => d.SalarioMinimo, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("Salario Minimo", null, new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(d => d.SalarioPromedio, new { @class = "mt-4" })
                            @Html.TextBoxFor(d => d.SalarioPromedio, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("Salario Promedio", null, new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(d => d.SalarioMaximo, new { @class = "mt-4" })
                            @Html.TextBoxFor(c => c.SalarioMaximo, new { @class = "form-control", required = "required", HtmlAttributes = new { Type = "text" } })
                            @Html.ValidationMessage("Salario Maximo", null, new { @class = "text-danger" })
                        </div>

                    </div>
                    <br />
                    <br />
                    <div class="modal-footer justify-content-center">
                        <div>
                            <input class="btn btn-success me-2" type="submit" value="Guardar" />
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>
